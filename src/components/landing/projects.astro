---
import { projects } from "../../config/projects.json";
---

<h2 class="text-center font-bold text-5xl my-10">Projects</h2>

{
  projects.map((project) => (
    <div class="flex flex-col md:flex-row text-center md:text-left mb-2">
      <div class="flex-1 p-4">
        <h2 class="font-bold text-2xl my-4">{project.title}</h2>
        <p>{project.description}</p>
        <button>More info</button>
      </div>
      <div class="flex-1">
        <img src={project.image} alt="" class="w-72 m-auto" />
      </div>
    </div>
  ))
}
